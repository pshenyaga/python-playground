<!DOCTYPE html>
<html>
    <head>
        {% block head %}
            {# <link rel="stylesheet" type="text/css" href="{{ url('static', filename='style.css') }}" /> #}
            <title>{{title}}</title>
        {% endblock %}
    </head>
    <body>
        <h1>{{title}}</h1>
        <div>
            {% if error %}
                <h2>Error: {{ error }}</h2>
            {% else %}
                {% block content %}
                {% endblock %}
            {% endif %}
        </div>
    </body>
</html>